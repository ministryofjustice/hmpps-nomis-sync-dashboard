{% extends "../../partials/layout.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "moj/components/filter/macro.njk" import mojFilter %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/table/macro.njk" import govukTable %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/checkboxes/macro.njk" import govukCheckboxes %}

{% set pageTitle = applicationName + " - Room mappings" %}

{% block content %}
{{ govukBackLink({
text: "Back",
href: '/'
}) }}


<div class="govuk-grid-row govuk-body">
    <h1 class="govuk-heading-l">Room mappings - {{ prisonId }}</h1>


    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">


            {% if rooms.length %}

            {% set rows = [] %}
            {% for u in rooms %}


            {% set actionHtml %}

            {% if u.vsipId %}
            <form action="/visits-room-mappings/delete" method="post" novalidate>
                <input type="hidden" name="_csrf" value="{{ csrfToken }}"/>
                <input type="hidden" name="prisonId" value="{{ u.prisonId }}"/>
                <input type="hidden" name="nomisRoomDescription" value="{{ u.nomisRoomDescription }}"/>
                {{ govukButton({
                text: "Delete",
                classes: "float-right, govuk-!-margin-bottom-0"
                }) }}
            </form>
            {% else %}
            <form action="/visits-room-mappings/add/preview" method="post" novalidate>
                <input type="hidden" name="_csrf" value="{{ csrfToken }}"/>
                <input type="hidden" name="prisonId" value="{{ u.prisonId }}"/>
                <input type="hidden" name="nomisRoomDescription" value="{{ u.nomisRoomDescription }}"/>
                {{ govukButton({
                text: "Add",
                classes: "float-right, govuk-!-margin-bottom-0"
                }) }}
            </form>
            {% endif %}
            {% endset %}

            {% set rows = (rows.push([
            { text: u.agencyInternalLocationDescription },{ text: u.vsipId },{ text: u.isOpen },{ html: actionHtml }
            ]), rows) %}
            {% endfor %}

            {{ govukTable({
            head: [
            {
            text: "NOMIS room description"
            },
            {
            text: "VSIP room description"
            },
            {
            text: "Open or closed"
            },
            {}
            ],
            rows: rows
            }) }}

            {% else %}
            <div class="govuk-!-margin-bottom-5">
                <div class="govuk-grid-row govuk-!-margin-bottom-2">
                    No mapping records found
                </div>
            </div>
            {% endif %}
        </div>
    </div>
</div>


{% endblock %}

{% block bodyEnd %}
{% endblock %}
